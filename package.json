{
  "name": "kase-vscode",
  "displayName": "kase-vscode",
  "description": "Kase Language Support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/Kannuki-san/kase-support-vscode"
},
  "categories": ["Programming Languages"],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/node": "^24.0.15",
    "typescript": "^5.8.3"
  },
  "contributes": {
    "languages": [{
      "id": "kase",
      "aliases": ["Kase", "kase"],
      "extensions": [".ks"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "kase",
      "scopeName": "source.kase",
      "path": "./syntaxes/kase.tmLanguage.json"
    }],
    "commands": [
      {
        "command": "kase.buildAndRun",
        "title": "Kase: Build & Run"
      }
    ],
    "menus": {
      "editor/title": [
        {
        "command": "kase.buildAndRun",
        "when": "resourceExtname == .ks",
        "group": "navigation"
        }
      ]
    }
  }
}
