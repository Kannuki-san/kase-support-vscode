{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": " Kase",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#builtins"},
		{"include": "#strings"},
		{"include": "#comments"},
		{"include": "#strings_single"},
		{"include": "#numbers"},
		{"include": "#identifiers"},
		{"include": "#operators"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.kase",
				"match": "\\b(if|while|for|return|else if|else|break|def)\\b"
			}]
		},
		"builtins": {
            "patterns": [{
                "name": "support.function.kase",
                "match": "\\b(print|input|open|close|puts|getline|alloc|set|get|str_empty)\\b"
			}
		]
    },
		"strings": {
			"name": "string.quoted.double.kase",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kase",
					"match": "\\\\."
				}
			]
		},
		"strings_single": {
			"name": "string.quoted.single.kase",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.kase",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.kase",
					"match": "#.*$"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.kase",
					"match": "\\b-?\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"identifiers": {
            "patterns": [
                {
                "name": "variable.other.kase",
                "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
		},
		"operators": {
            "patterns": [
                {
                "name": "keyword.operator.kase",
                "match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|%)"
                }
            ]
		}
		
	},
	"scopeName": "source.kase"
}